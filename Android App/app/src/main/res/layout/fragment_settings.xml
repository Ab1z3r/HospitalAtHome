<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SettingsFragment">

    <TextView
        android:id="@+id/settings_measurement_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:text="Measurement Units" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/settings_measurement_title"
        android:layout_alignParentRight="true"
        android:background="@color/lightGray" />

    <TextView
        android:id="@+id/settings_temperature_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_measurement_title"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="Temperature"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/settings_temperature_units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_measurement_title"
        android:layout_toLeftOf="@id/settings_temperature_arrow"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="F"
        android:textColor="@color/lightGray"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/settings_temperature_arrow"
        android:layout_width="18sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_measurement_title"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
        app:tint="@color/lightGray" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/settings_temperature_label"
        android:layout_alignParentRight="true"
        android:background="@color/lightGray" />

    <TextView
        android:id="@+id/settings_height_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_temperature_label"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="Height"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/settings_height_units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_temperature_units"
        android:layout_toLeftOf="@id/settings_height_arrow"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="ft"
        android:textColor="@color/lightGray"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/settings_height_arrow"
        android:layout_width="18sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_temperature_units"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
        app:tint="@color/lightGray" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/settings_height_label"
        android:layout_alignParentRight="true"
        android:background="@color/lightGray" />

    <TextView
        android:id="@+id/settings_weight_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_height_label"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="Weight"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/settings_weight_units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_height_units"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_toLeftOf="@id/settings_weight_arrow"
        android:text="lbs"
        android:textColor="@color/lightGray"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/settings_weight_arrow"
        android:layout_width="18sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_height_units"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
        app:tint="@color/lightGray" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/settings_weight_label"
        android:layout_alignParentRight="true"
        android:background="@color/lightGray" />

</RelativeLayout>